{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
      // 디렉토리 설정 시 필요
      // "@/component/*": [
      //   "components/*"
      // ],
      // "@/types/*": [
      //   "types/*"
      // ],
      // "@/pages/*": [
      //   "pages/*"
      // ],
      // "@/styles/*": [
      //   "styles/*"
      // ],
      // "@/api/*": [
      //   "api/*"
      // ],
      // "@/modules/*": [
      //   "modules/*"
      // ],
      // "@/hooks/*": [
      //   "hooks/*"
      // ],
      // "@/utils/*": [
      //   "utils/*"
      // ],
      // "@/layouts/*": [
      //   "layouts/*"
      // ],
      // "@/store/*": [
      //   "store/*"
      // ]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
